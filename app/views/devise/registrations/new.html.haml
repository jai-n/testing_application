%h2 Sign up
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %div
    = f.label :first_name
    %br/
    = f.text_field :first_name
  %div
    = f.label :last_name
    %br/
    = f.text_field :last_name
  %div
    = f.input :user_school,:collection => MySchool.all, :value_method => :id,:label => "School" ,:include_blank => false 
  //- f.simple_fields_for :user_school do |posts_form|
  //  = posts_form.collection_select(:name, MySchool.all, :id, :name) 
  %div
    = f.label :role
    %br/
    = f.collection_select :role, User::ROLES, :to_s, :humanize
  %div
    = f.label :group
    %br/
    = f.text_field :group
  %div
    = f.label :phone
    %br/
    = f.text_field :phone
  %div
    = f.label :email
    %br/
    = f.email_field :email, :autofocus => true
  %div
    = f.label :password
    %br/
    = f.password_field :password
  %div
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  %div= f.submit "Sign up"
= render "devise/shared/links"