= form_for(@my_school) do |f|
  - if @my_school.errors.any?
    #error_explanation
      %h2
        = pluralize(@my_school.errors.count, "error")
        prohibited this my_school from being saved:
      %ul
        - @my_school.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br
      = f.text_field :name
  .field
    = f.label :website_url
    %br
      = f.text_field :website_url
  .field
    = f.label :company_name
    %br
      = f.text_field :company_name
  .field
    = f.label :contact_name
    %br
      = f.text_field :contact_name
  .field
    = f.label :email
    %br
      = f.text_field :email
  .field
    = f.label :phone_number
    %br
      = f.text_field :phone_number
  .field
    = f.label :vat_number
    %br
      = f.text_field :vat_number
  .field
    = f.label :address
    %br
      = f.text_area :address
  .field
    = f.label :city
    %br
      = f.text_field :city
  .field
    = f.label :post_code
    %br
      = f.text_field :post_code
  .field
    = f.label :note
    %br
      = f.text_field :note
  .field
    = f.label :active
    %br
      = f.check_box :active
  .actions
    = f.submit